@model ProgramServiceModel

@{
    this.ViewData["Title"] = "Program Details";
}


<div class="row">
    <div class="col-md-6">
        <div class="pro-img-details">
            <img src="@Model.ImageUrl" alt="@Model.Name @Model.Description">
        </div>
    </div>
    <div class="col-md-6">
        <h4 class="pro-d-title font-weight-bold text-center" style="font-size:250%; color:black">
            @Model.Name
        </h4>
        <div class="m-bot15" style="font-size:150%">
            <span style="color:black; font-weight:bold">Level : @Model.Level</span>
        </div>
        @if (User.IsInRole(WebConstants.AdministratorRoleName))
        {
            <a asp-controller="Programs" asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-outline-dark offset-4" style="font-weight:bold; width:40%">Edit</a>
        }
        <hr />
        <p>
            <h3 style="color:black; font-weight:bold"> Description   </h3>
            @Model.Description
        </p>
    </div>
</div>
