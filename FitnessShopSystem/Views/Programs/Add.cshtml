@model FitnessShopSystem.Models.Programs.ProgramFormModel

@{
    ViewData["Title"] = "Add Program";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-md-2 col-md-7">
            <h2 class="heading-margin text-center"><strong>Add Program</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Level">Level</label>
                    <input asp-for="Level" class="form-control">
                    <span asp-validation-for="Level" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">ImageUrl</label>
                    <input asp-for="ImageUrl" rows="3" class="form-control"></input>
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <input class="btn btn-dark" style="background-color:black; margin-left:200px; width:30%; font-weight: bold" type="submit" value="Add" />
                </strong>
            </form>
        </div>
    </div>
</div>