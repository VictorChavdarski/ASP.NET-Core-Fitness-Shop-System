@model ProgramFormModel

@{
    ViewData["Title"] = "Edit Program";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-md-2 col-md-7">
            <h2 class="heading-margin text-center"><strong>@ViewBag.Title</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Protein, Creatine, BCAA...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Level">Level</label>
                    <input asp-for="Level" class="form-control" placeholder="Banana, chocolate, vanilla...">
                    <span asp-validation-for="Level" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"> </span>
                </div>
                <input class="btn btn-dark offset-4" type="submit" value="Save" style="background-color:black;margin-bottom:20px; width:30%; position:center; font-weight:bold" />
                </strong>
            </form>
            <form asp-action="Delete" asp-route-id="@Model.Id" id="deleteForm">
            </form>
            <button class="btn btn-danger offset-4" style="width:30%; font-weight:bold" data-toggle="modal" data-target="#deleteModal">Delete Program</button>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="color:black">Delete @Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p style="font-weight:bold; color:black">Do you want to delete this program?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" style="background-color:black; font-weight:bold" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" style="font-weight:bold" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>