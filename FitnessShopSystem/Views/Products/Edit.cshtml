@model ProductFormModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-md-2 col-md-7">
            <h2 class="heading-margin text-center"><strong>@ViewBag.Title</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Protein, Creatine, BCAA...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Brand">Brand</label>
                    <input asp-for="Brand" class="form-control" placeholder="Universal, MyProtein...">
                    <span asp-validation-for="Brand" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Flavour">Flavour</label>
                    <input asp-for="Flavour" class="form-control" placeholder="Banana, chocolate, vanilla...">
                    <span asp-validation-for="Flavour" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <input class="btn btn-primary offset-4" type="submit" value="Save" style="margin-bottom:20px ;background-color:black;width:30%; position:center" />
                </strong>
            </form>
            <form asp-action="Delete" asp-route-id="@Model.Id" id="deleteForm">
            </form>
            <button class="btn btn-danger offset-4" style="width:30%" data-toggle="modal" data-target="#deleteModal">Delete Product</button>
        </div>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="color:black">Delete @Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p style="font-weight:bold; color:black">Do you want to delete this product?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" style="background-color:black; font-weight:bold" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" style="font-weight:bold" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>
