@model FitnessShopSystem.Models.Home.ContactFormModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-md-2 col-md-7">
            <h2 class="heading-margin text-center" style="font-weight:bold; color:black">Contact Us</h2>

            <form method="post">
                <div class="form-group">
                    <label style="font-weight:bold" asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold" asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold" asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold" asp-for="Country">Country</label>
                    <input asp-for="Country" class="form-control">
                    <span asp-validation-for="Country" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold" asp-for="Subject">Subject</label>
                    <textarea asp-for="Subject" class="form-control"></textarea>
                    <span asp-validation-for="Subject" class="small text-danger"></span>
                </div>

                <input class="btn btn-dark offset-5" style="background-color:black; font-weight:bold" type="submit" value="Send" />
            </form>
        </div>
    </div>
</div>