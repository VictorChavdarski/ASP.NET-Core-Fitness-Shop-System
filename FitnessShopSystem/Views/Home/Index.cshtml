@model IndexViewModel

@{
    ViewData["Title"] = "Fitness Shop";
}

@{
    var products = Model.Products;
    var firstProduct = products.Any() ? products[0] : null;
    var secondProduct = products.Count > 1 ? products[1] : null;
    var thirdProduct = products.Count > 2 ? products[2] : null;
}

@if (!products.Any())
{
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Welcome to the best supplements shop in the world</h1>
            <p class="lead">Sorry, currently there are no products in our website.</p>
        </div>
    </div>
}

<div id="carouselExampleControls" class="carousel slide col-xl-6 offset-xl-3" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstProduct != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstProduct.ImageUrl" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@firstProduct.Brand @firstProduct.Price</h5>
                    <p class="text-black-50">@firstProduct.Description</p>
                </div>
            </div>
        }
        @if (secondProduct != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondProduct.ImageUrl" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@secondProduct.Brand @secondProduct.Price</h5>
                    <p>@secondProduct.Description</p>
                </div>
            </div>
        }
        @if (thirdProduct != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdProduct.ImageUrl" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@thirdProduct.Brand @thirdProduct.Price</h5>
                    <p>@thirdProduct.Description</p>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev text-black-50" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
