@model IndexViewModel

@{
    ViewData["Title"] = "Fitness Shop";
}

@if (!Model.Products.Any())
{
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Welcome to the best supplements shop in the world</h1>
            <p class="lead">Sorry, currently there are no products in our website.</p>
        </div>
    </div>
}

<div class="row" style="position:absolute;left:0px; right:0px">
    <video style="position:relative; min-width:100%; min-height: 100%" autoplay muted loop id="myVideo">
        <source src="video.mp4" type="video/mp4">
    </video>
</div>

<div class="row" style="padding-top:750px">
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <a asp-controller="Products" asp-action="Buy" asp-route-id="@product.Id"><img class="card-img-top" src="@product.ImageUrl" alt="Card image cap"></a>
                    @*<div class="card-body text-center">
                            <h5 class="card-title text-center">@product.Brand @product.Price</h5>

                        </div>*@
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div id="carouselExampleControls" class="carousel slide col-xl-6 offset-xl-1" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                var product = Model.Products[i];
                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <a asp-controller="Products" asp-action="Buy" asp-route-id="@product.Id">
                        <img class="d-block w-100" src="@product.ImageUrl" alt="@product.Brand @product.Price">
                    </a>
                </div>
            }
        </div>
        <a class="carousel-control-prev text-black-50" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div>
        <p class="text-center" style="font-size:150%; color:white">Try the best supplements in the world</p>
    </div>

</div>

